  <h2>会員情報</h2>
  <table class="table">
    <thead>
      <tr>
        <th>
          <%= image_tag @user.get_profile_image(100,100) %>
        </th>
      </tr>
      <tr>
        <th>ユーザーネーム</th>
        <th><%= @user.user_name %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><b>ステータス</b></td>
        <td>
          <b>genreを参照</b>
        </td>
      </tr>
    </tbody>
  </table>
  <!--user編集リンク-->
  <div class="col-lg-10">
    <%= link_to root_path do %>
    <button class="btn btn-outline-secondary btn-block">
      会員を編集する
      <!--<i class="fas fa-user-cog"></i>-->
    </button>
    <% end %>
  </div>
  <div class="mt-3">
    <h2>New book</h2>
    <%= form_with model: @post_routine, url: public_post_routine_create_path do |f| %>

    <p>MY ROUTINE</p>
    <div class="form-group">
      <%= f.text_area :routine_info, placeholder: "習慣を書いてください" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>