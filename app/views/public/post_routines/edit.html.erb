<% if flash[:notice] %>
<div class="alert-success" role="alert">
  <p class="notice text-center" style="color:green;">
    <%= flash[:notice] %>
  </p>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-8 mt-3">
      <h3>Routine Editing</h3>
      <%= form_with model: @post_routine, url: public_post_routines_update_path(@post_routine) do |f| %>
      <div class="form-group">
        <%= f.text_area :routine_info, placeholder: @post_routine.routine_info %>
      </div>

<!--ジャンルを指定するラジオボタン-->
      <h5>ジャンル変更</h5>
      <div class="form-group">
        <%= f.radio_button :genre, "study", checked: true %>
        <%= f.label :genre, "勉強" %>

        <%= f.radio_button :genre, "exercise" %>
        <%= f.label :genre, "運動" %>

        <%= f.radio_button :genre, "others" %>
        <%= f.label :genre, "その他" %>
      </div>

      <div class="form-group">
        <%= f.submit 'ROUTINE投稿', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
